  // JavaScript para modal
  script.
    // Modal para currículos
    const cvModal = document.getElementById('cv-modal');
    const openCvModal = document.getElementById('open-cv-modal');
    const openCvModal2 = document.getElementById('open-cv-modal-2');
    const closeCvModal = document.getElementById('close-cv-modal');
    
    openCvModal.addEventListener('click', (e) => {
      e.preventDefault();
      cvModal.style.display = 'block';
    });
    
    if (openCvModal2) {
      openCvModal2.addEventListener('click', (e) => {
        e.preventDefault();
        cvModal.style.display = 'block';
      });
    }
    
    closeCvModal.addEventListener('click', () => {
      cvModal.style.display = 'none';
    });
    
    window.addEventListener('click', (e) => {
      if (e.target === cvModal) {
        cvModal.style.display = 'none';
      }
    });
